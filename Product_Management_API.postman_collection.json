{
  "info": {
    "_postman_id": "5d89c331-cb92-41ae-a0a9-e49fa7324c19",
    "name": "Product Management API",
    "description": "Complete API collection for Product Management System - Retail/E-commerce",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "32663186"
  },
  "item": [
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products?pageNumber=1&pageSize=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"],
              "query": [
                {
                  "key": "pageNumber",
                  "value": "1",
                  "description": "Page number (default: 1)"
                },
                {
                  "key": "pageSize",
                  "value": "10",
                  "description": "Items per page (default: 10, max: 100)"
                },
                {
                  "key": "searchTerm",
                  "value": "",
                  "description": "Search in name, description, or SKU",
                  "disabled": true
                },
                {
                  "key": "categoryId",
                  "value": "",
                  "description": "Filter by category ID",
                  "disabled": true
                },
                {
                  "key": "isActive",
                  "value": "",
                  "description": "Filter by active status (true/false)",
                  "disabled": true
                }
              ]
            },
            "description": "Get paginated list of products with optional filtering"
          },
          "response": []
        },
        {
          "name": "Get Products - Search",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products?pageNumber=1&pageSize=10&searchTerm=dress",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"],
              "query": [
                {
                  "key": "pageNumber",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "10"
                },
                {
                  "key": "searchTerm",
                  "value": "dress"
                }
              ]
            },
            "description": "Search products by term"
          },
          "response": []
        },
        {
          "name": "Get Products - Filter by Category",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products?pageNumber=1&pageSize=10&categoryId={{categoryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"],
              "query": [
                {
                  "key": "pageNumber",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "10"
                },
                {
                  "key": "categoryId",
                  "value": "{{categoryId}}",
                  "description": "Replace with actual category ID"
                }
              ]
            },
            "description": "Filter products by category"
          },
          "response": []
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "{{productId}}"]
            },
            "description": "Get a single product by ID"
          },
          "response": []
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Premium Leather Jacket\",\n  \"description\": \"High-quality leather jacket with modern design\",\n  \"sku\": \"M-JACKET-001\",\n  \"price\": 199.99,\n  \"stockQuantity\": 50,\n  \"categoryId\": null,\n  \"isActive\": true,\n  \"attributes\": \"{\\\"Size\\\":[\\\"S\\\",\\\"M\\\",\\\"L\\\",\\\"XL\\\"],\\\"Color\\\":[\\\"Black\\\",\\\"Brown\\\"],\\\"Material\\\":\\\"Genuine Leather\\\"}\",\n  \"images\": [\n    {\n      \"imageUrl\": \"https://images.unsplash.com/photo-1551028719-00167b16eac5?w=500\",\n      \"isPrimary\": true,\n      \"displayOrder\": 1\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"]
            },
            "description": "Create a new product"
          },
          "response": []
        },
        {
          "name": "Update Product",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Product Name\",\n  \"description\": \"Updated description\",\n  \"price\": 149.99,\n  \"categoryId\": null,\n  \"isActive\": true,\n  \"attributes\": \"{\\\"Size\\\":[\\\"S\\\",\\\"M\\\",\\\"L\\\"]}\",\n  \"version\": {{productVersion}}\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "{{productId}}"]
            },
            "description": "Update an existing product. Include version for optimistic locking."
          },
          "response": []
        },
        {
          "name": "Delete Product (Soft Delete)",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "{{productId}}"]
            },
            "description": "Soft delete a product (sets IsActive to false)"
          },
          "response": []
        },
        {
          "name": "Get Inventory Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}/inventory",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "{{productId}}", "inventory"]
            },
            "description": "Get current inventory status for a product"
          },
          "response": []
        },
        {
          "name": "Adjust Inventory - Stock In",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"transactionType\": 1,\n  \"quantity\": 25,\n  \"reason\": \"New stock received\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}/inventory/adjust",
              "host": ["{{baseUrl}}"],
              "path": [
                "api",
                "products",
                "{{productId}}",
                "inventory",
                "adjust"
              ]
            },
            "description": "Increase stock (TransactionType: 1 = In, 2 = Out)"
          },
          "response": []
        },
        {
          "name": "Adjust Inventory - Stock Out",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"transactionType\": 2,\n  \"quantity\": 5,\n  \"reason\": \"Sale\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}/inventory/adjust",
              "host": ["{{baseUrl}}"],
              "path": [
                "api",
                "products",
                "{{productId}}",
                "inventory",
                "adjust"
              ]
            },
            "description": "Decrease stock (TransactionType: 1 = In, 2 = Out)"
          },
          "response": []
        }
      ],
      "description": "Product management endpoints"
    },
    {
      "name": "Categories",
      "item": [
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/categories",
              "host": ["{{baseUrl}}"],
              "path": ["api", "categories"]
            },
            "description": "Get all categories with hierarchy"
          },
          "response": []
        },
        {
          "name": "Create Category",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Kids Fashion\",\n  \"description\": \"Clothing and accessories for children\",\n  \"parentCategoryId\": null\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/categories",
              "host": ["{{baseUrl}}"],
              "path": ["api", "categories"]
            },
            "description": "Create a new category. Set parentCategoryId for subcategories."
          },
          "response": []
        },
        {
          "name": "Create Subcategory",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"T-Shirts\",\n  \"description\": \"Casual t-shirts\",\n  \"parentCategoryId\": \"{{categoryId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/categories",
              "host": ["{{baseUrl}}"],
              "path": ["api", "categories"]
            },
            "description": "Create a subcategory by providing parentCategoryId"
          },
          "response": []
        },
        {
          "name": "Delete Category",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/categories/{{categoryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "categories", "{{categoryId}}"]
            },
            "description": "Delete a category. Cannot delete if it has products or subcategories."
          },
          "response": []
        }
      ],
      "description": "Category management endpoints"
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "productId",
      "value": "",
      "type": "string",
      "description": "Set this after getting a product ID from Get All Products"
    },
    {
      "key": "categoryId",
      "value": "",
      "type": "string",
      "description": "Set this after getting a category ID from Get All Categories"
    },
    {
      "key": "productVersion",
      "value": "0",
      "type": "string",
      "description": "Set this from the version field in Get Product by ID response"
    }
  ]
}
